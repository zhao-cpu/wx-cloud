.swiper,
.swiper_item {
    width: 100%;
    height: 360rpx;
}

.swiper_item image {
    width: 100%;
}

/* 推荐 */
.recommend {
    padding: 32rpx 32rpx 0;
}

.recommend_head {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.recommend_head_more_txt{
    font-size: 26rpx;
    color: #999999;
}
.recommend_head_more{
    display: flex;
    align-items: center;
}
.recommend_head_more .iconfont{
    font-size: 26rpx;
    color: #999999;
}

.recommend_title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
}

.recommend_main {
    display: flex;
    height: 160rpx;
    padding: 32rpx 0;
    border-bottom: 1px solid #eeeeee;
}

.main_left {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.main_left_subtitle {
    font-size: 32rpx;
    font-weight: bold;
    color: #555555;
    word-break: break-all;
}

.main_left_tag {
    height: 50rpx;
    line-height: 50rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    color: #666666;
    font-size: 24rpx;
    padding: 0 20rpx;
    margin-right: 20rpx;
}

.read_icon {
    color: #999999;
}

.read_num {
    font-size: 24rpx;
    color: #999999;
    padding-left: 6rpx;
}

.main_right {
    margin-left: auto;
    padding-left: 16rpx;
}
.main_right image {
    width: 240rpx;
    height: 160rpx;
    border-radius: 8rpx;
    background-color: #eee;
}
.no_more{
    text-align: center;
    color: #999999;
    font-size: 28rpx;
    padding: 50rpx 0;
}



.submit{
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    right: 32rpx;
    bottom: 20%;
}
.submit image{
    width: 100rpx;
    height: 100rpx;
}
/* pages/articleDetail/articleDetail.wxss */
page {
  padding-bottom: 200rpx;
}
.header {
  padding: 32rpx 32rpx 20rpx;
}
.header_title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 56rpx;
  margin-bottom: 20rpx;
}
.header_name {
  font-size: 28rpx;
  color: #186ffc;
  margin-right: 24rpx;
}
.header_time {
  font-size: 28rpx;
  color: #999999;
}
.header_like {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #999999;
}
.header_like view:last-of-type {
  margin-left: 8rpx;
}

/* main */
.main {
  padding: 0 32rpx 0;
}
.main_detail {
  font-size: 30rpx;
  color: #666666;
  line-height: 60rpx;
  text-align: justify;
}

.main_image_box {
  margin-top: 20rpx;
}
.main_first {
  width: 100%;
}
.main_image {
  width: 222rpx;
  height: 222rpx;
  margin-bottom: 10rpx;
}
.main_image:nth-of-type(3n-1) {
  margin: 0 10rpx 10rpx;
}
.circle {
  margin: 50rpx auto;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: #ebf3ff;
  color: var(--main-color);
  font-size: 30rpx;
  padding: 20rpx;
}
.circle image {
  width: 60rpx;
  height: 60rpx;
}

/* 管理 */
.fixed {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 60rpx;
  left: 32rpx;
  right: 32rpx;
  background: #ffffff;
  box-shadow: 0px 0px 32rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 24rpx 40rpx;
}
.fixed_title {
  font-size: 28rpx;
  color: #333333;
  margin-right: 40rpx;
}
.fixed_comment {
  margin-right: 0;
  position: relative;
}
.fixed_comment::before {
  content: "";
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
}
.fixed_input {
  font-size: 28rpx;
  color: #333;
  background: #f6f6f6;
  border-radius: 8rpx;
  /* padding: 16rpx 24rpx; */
  margin-right: 40rpx;
  flex: 1;
  padding: 10rpx;
}

/* 评论 */
.comment_box {
  display: flex;
  margin: 0 32rpx;
  border-bottom: 1px solid #eeeeee;
  padding: 32rpx 0;
}
.comment_box image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.comment_right {
  margin-left: 20rpx;
}
.comment_right view:first-of-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  margin: 8rpx 0;
}
.comment_right view:last-of-type {
  font-size: 30rpx;
  color: #666666;
  line-height: 50rpx;
  text-align: justify;
}
